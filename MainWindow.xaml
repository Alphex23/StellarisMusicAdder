<Window x:Class="StellarisMusicAdder.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:StellarisMusicAdder.ViewModels"
    mc:Ignorable="d"
    Title="Stellaris Music Adder" Height="630" Width="800" MinHeight="400" MinWidth="500"
    AllowDrop="True" Drop="Window_Drop">

    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Add Files" Command="{Binding AddFilesCommand}" Padding="15,5" FontWeight="Bold"/>
            <Button Content="Clear List" Command="{Binding ClearListCommand}" Margin="10,0,0,0" Padding="15,5"/>
            <Button Content="CONVERT ALL" Command="{Binding ConvertAllCommand}" Margin="20,0,0,0" Padding="20,5" Background="#FF4A8A4A" Foreground="White" FontWeight="Bold"/>

            <!-- New Commit Button -->
            <Button Content="Commit to Stellaris" Command="{Binding CommitToStellarisCommand}" Margin="20,0,0,0" Padding="15,5" Background="#FF3A6DAA" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="3" Background="#FFF0F0F0">
            <ListBox ItemsSource="{Binding MusicFiles}" BorderThickness="0" Background="Transparent"
                     HorizontalContentAlignment="Stretch" Margin="5"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextTrimming="CharacterEllipsis" ToolTip="{Binding}" Margin="5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!-- New row for Stellaris Path -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Output Folder controls are in Row 0 -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Output Folder:" FontWeight="Bold" VerticalAlignment="Center"/>
            <Grid Grid.Row="0" Grid.Column="1" Margin="10,0,5,0">
                <TextBox Text="{Binding OutputFolder}" VerticalContentAlignment="Center" IsReadOnly="True" Background="#FFEAEAEA"/>
                <Button Command="{Binding BrowseOutputCommand}" Content="..." HorizontalAlignment="Right" Width="30"/>
            </Grid>

            <!-- New Stellaris Path Selector in Row 1 -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Stellaris Music Path:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,5,0,0"/>
            <Grid Grid.Row="1" Grid.Column="1" Margin="10,5,5,0">
                <TextBox Text="{Binding StellarisMusicPath}" VerticalContentAlignment="Center" Background="#FFEAEAEA"/>
                <Button Command="{Binding BrowseStellarisPathCommand}" Content="..." HorizontalAlignment="Right" Width="30"/>
            </Grid>

            <!-- Status Text is now in Row 2 -->
            <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding StatusText}" Margin="0,5,0,0" Foreground="DimGray" FontStyle="Italic" HorizontalAlignment="Left"/>
        </Grid>
    </Grid>
</Window>